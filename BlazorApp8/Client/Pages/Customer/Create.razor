@page "/customer/create"
@using BlazorApp8.Shared
@inject HttpClient Http
@inject DialogService DialogService
@inject NavigationManager _nav


<style>
    form .row {
        margin-bottom: 16px;
    }
</style>

@if (cust == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <RadzenTemplateForm Data="@cust">
        <div class="row">
            <RadzenFieldset Text="Add new customer">
                <div class="row">
                    <div class="align-items-center d-flex col-md-3">
                        <RadzenLabel Text="First name" />
                    </div>
                    <div class="col-md-9">
                        <RadzenTextBox style="width: 100%;" Name="First name" @bind-Value="cust.FirstName" />
                    </div>
                </div>
                <div class="row">
                    <div class="align-items-center d-flex col-md-3">
                        <RadzenLabel Text="Last Name" />
                    </div>
                    <div class="col-md-9">
                        <RadzenTextBox style="width: 100%;" Name="First name" @bind-Value="cust.LastName" />
                    </div>
                </div>
                <div class="row">
                    <div class="align-items-center d-flex col-md-3">
                        <RadzenLabel Text="Clerk" />
                    </div>
                    <div class="col-md-9">
                        <RadzenTextBox style="width: 100%;" Name="Email" @bind-Value="cust.Email" />
                    </div>
                </div>
                <div class="row">
                    <div class="align-items-center d-flex col-md-3">
                        <RadzenLabel Text="Age" />
                    </div>
                    <div class="col-md-3">
                        <RadzenNumeric style="width: 100%;" Name="Age" @bind-Value="cust.age" />
                        @*<RadzenSlider @bind-Value=@cust.age TValue="int?" Min="0" Max="100" Class="w-100" />*@
                    </div>
                    <div class="align-items-center d-flex col-md-2">
                        <RadzenLabel Text="Telephone" />
                    </div>
                    <div class="col-md-4">
                        <RadzenNumeric Placeholder="123" style="width: 100%;" Name="Tax" @bind-Value="cust.Telephone" />
                    </div>
                </div>
                <div class="row">
                    <div class="align-items-center d-flex col-md-3">
                        <RadzenLabel Text="Date de naissance" />
                    </div>
                    <div class="col-md-3">
                        <RadzenDatePicker style="width: 100%;" Name="OrderDate" @bind-Value="cust.DateNaissance" DateFormat="d" Class="w-100"/>
                    </div>
                </div>
            </RadzenFieldset>
            <div class="row justify-content-center">
                <div class="col-md-12 d-flex align-items-end justify-content-center" style="margin-top: 16px;">
                    <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Icon="cancel" style="display: inline-block; margin-left: 10px;" Text="Back to list" Click="@(()=>_nav.NavigateTo("/customer/index"))" />
                </div>
            </div>
        </div>
    </RadzenTemplateForm>
}

@code {
    private Customer cust = new Customer();

    private void OnSubmit()
    {
        
    }
}